{
  "name": "@accordproject/ergo-cli",
  "version": "0.6.2",
  "description": "Ergo CLI",
  "repository": {
    "type": "git",
    "url": "https://github.com/accordproject/ergo"
  },
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test:cucumber": "cucumber-js test/features --require .cucumber.js --world-parameters '{\"rootdir\":\"./test\"}'",
    "test": "mocha && npm run test:cucumber && nyc mocha"
  },
  "contributors": [
    {
      "name": "Jerome Simeon",
      "email": "jerome@clause.io"
    }
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@accordproject/ergo-compiler": "0.6.2",
    "@accordproject/ergo-engine": "0.6.2",
    "jsome": "2.5.0",
    "winston": "^3.2.1",
    "yargs": "9.0.1",
    "chalk": "2.4.1"
  },
  "bin": {
    "ergoc": "./bin/ergoc.js",
    "ergorun": "./bin/ergorun.js",
    "ergotop": "./bin/ergotop.js"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "chai-things": "0.2.0",
    "cucumber": "^5.1.0",
    "eslint": "4.19.1",
    "jsdoc": "3.5.5",
    "lerna": "2.11.0",
    "license-check": "1.1.5",
    "mocha": "5.1.1",
    "nyc": "11.8.0"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./test/data/**/*",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*",
      "!bin/*",
      "!lib/ergoc-lib.js*",
      "!lib/ergotop-lib.js"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "produce-source-map": "true",
    "sourceMap": "inline",
    "reporter": [
      "lcov",
      "text-summary",
      "html",
      "json"
    ],
    "include": [
      "lib/**/commands.js"
    ],
    "exclude": [],
    "all": true,
    "check-coverage": true,
    "statements": 93,
    "branches": 70,
    "functions": 92,
    "lines": 93
  }
}