{
  "name": "@accordproject/ergo-cli",
  "version": "0.24.0",
  "description": "Ergo CLI",
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "ergo": "./index.js",
    "ergotop": "./ergotop.js"
  },
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test:mocha": "mocha --timeout 40000",
    "test:cucumber": "cucumber-js test/features --require .cucumber.js --world-parameters \"{\\\"rootdir\\\":\\\"./test\\\"}\"",
    "test": "npm run test:mocha && npm run test:cucumber",
    "test:cov": "nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/accordproject/ergo",
    "directory": "packages/ergo-cli"
  },
  "keywords": [
    "accord project",
    "contracts",
    "smart",
    "legal",
    "tech"
  ],
  "author": "clause.io",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/accordproject/cicero/issues"
  },
  "homepage": "https://www.accordproject.org/projects/ergo",
  "dependencies": {
    "@accordproject/ergo-compiler": "0.24.0",
    "@accordproject/ergo-engine": "0.24.0",
    "@accordproject/ergo-test": "0.24.0",
    "chalk": "2.4.1",
    "jsome": "2.5.0",
    "winston": "3.2.1",
    "yargs": "17.3.1"
  },
  "devDependencies": {
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "chai-things": "0.2.0",
    "cucumber": "5.1.0",
    "eslint": "8.2.0",
    "jsdoc": "^3.6.10",
    "license-check": "1.1.5",
    "mocha": "8.3.2",
    "nyc": "15.1.0"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./test/data/**/*",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*",
      "!./index.js",
      "!./ergotop.js",
      "!extracted/ergoccore.js",
      "!extracted/ergotopcore.js"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "produce-source-map": "true",
    "sourceMap": "inline",
    "reporter": [
      "lcov",
      "text-summary",
      "html",
      "json"
    ],
    "include": [
      "lib/**/commands.js"
    ],
    "exclude": [],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "gitHead": "bf65386e8590dff56f8b9bc0bb657263ff049437"
}
