{
  "name": "@accordproject/ergo-compiler",
  "version": "0.0.57",
  "description": "Ergo Compiler",
  "repository": {
    "type": "git",
    "url": "https://github.com/accordproject/ergo"
  },
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test": "mocha && nyc mocha"
  },
  "contributors": [
    {
      "name": "Jerome Simeon",
      "email": "jerome@clause.io"
    }
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "composer-common": "0.17.4",
    "yargs": "9.0.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "chai-things": "0.2.0",
    "eslint": "4.19.1",
    "jsdoc": "3.5.5",
    "lerna": "2.5.1",
    "license-check": "1.1.5",
    "mocha": "5.1.1",
    "nyc": "11.8.0"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./test/data/**/*",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*",
      "!bin/*",
      "!lib/ergo-core.js",
      "!lib/ergo-runtime.js"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "produce-source-map": "true",
    "sourceMap": "inline",
    "reporter": [
      "lcov",
      "text-summary",
      "html",
      "json"
    ],
    "include": [
      "lib/**/ergo.js"
    ],
    "exclude": [],
    "all": true,
    "check-coverage": true,
    "statements": 93,
    "branches": 70,
    "functions": 92,
    "lines": 93
  }
}
