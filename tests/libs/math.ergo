namespace org.accordproject.ergo.math

define constant PI = 4.0 * atan(1.0)
define constant E = exp(1.0)

/**
 * Converts angle measured in degrees to radians
 *
 * @param {Double} the angle in degrees
 * @returns {Double} the angle in radians
 */
define function degreesToRadians(degrees: Double) {
    return (degrees * PI) / 180.0
}

/**
 * Converts angle measured in radians to degrees
 *
 * @param {Double} the angle in radians
 * @returns {Double} the angle in degrees
 */
define function radiansToDegrees(radians: Double) {
    return (radians * 180.0) / PI
}

